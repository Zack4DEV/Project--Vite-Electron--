{
	"name": "project-app-electron",
	"type": "module",
	"version": "1.0.0-SNAPSHOT",
	"packageManager": "npm@10.2.0",
	"authors": [
		{
			"name": "Zack4DEV",
			"url": "https://github.com/Zack4DEV"
		}
	],
	"license": "MIT",
	"homepage": "https://github.com/Zack4DEV/Project--Vite-Electron--Hotel",
	"repository": {
		"type": "git",
		"url": "https://github.com/Zack4DEV/Project--Vite-Electron--Hotel"
	},
	"keywords": [
		"Vite",
		"Electron",
		"quick",
		"start"
	],
  "main": "dir/main/index.ts",
  "dependencies": {
    "einf": "^1.5.0"
  },
  "devDependencies": {
    "@lightwing/eslint-config": "0.0.23",
    "@swc/wasm": "^1.3.94-nightly-20231014.1",
    "electron": "^26.3.0",
    "electron-builder": "24.6.4",
    "eslint": "8.51.0",
    "happy-dom": "12.9.0",
    "lint-staged": "14.0.1",
    "playwright": "1.38.1",
    "simple-git-hooks": "2.9.0",
    "tslib": "2.6.2",
    "typescript": "5.2.2",
    "rimraf": "5.0.5",
    "@vitejs/plugin-vue": "^4.4.0",
    "@vue/compiler-sfc": "^3.3.4",
    "vite": "4.0.0",
    "vite-plugin-live-reload": "3.0.2",
    "vite-plugin-doubleshot": "0.0.12",
    "vitest": "0.34.6",
		"vue-tsc": "1.8.19"

  },
  "scripts": {
    "electron": "wait-on http://0.0.0.0:65534/ && electron .",
    "install": "npm i @swc/wasm@1.3.94-nightly-20231014.1 glob -D",
    "dev": "rimraf dist && vite", 
    "build": "rimraf dist && vite build --watch --force",
    "preview": "rimraf dist && vite preview --watch",
    "optimize": "vite optimize",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix --no-ignore",
    "test": "npm run test:render && npm run test:db",
    "test:render": "vitest run -r ./src/render --passWithNoTests",
    "test:e2e": "vitest run",
    "postinstall": "electron-builder install-app-deps",
    "postuninstall": "electron-builder install-app-deps"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "*.{js,ts,tsx,vue,md,json,yml}": [
      "eslint --fix"
    ]
  }
}
