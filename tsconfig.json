{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "strict": false,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "baseUrl": "/",
    "lib": [
      "esnext",
      "dom"
    ],
    "types": [
      "vite/client",
      "./dir/preload",
      "./dir/render/"
    ],
    "paths": {
      "@render/*": [
        "dir/render/*"
      ],
     "@main/*": [
        "dir/main/*"
      ],
      "@common/*": [
        "dir/common/*"
      ],
      "@preload/*": [
        "dir/preload/*"
      ],
    }
  },
  "include": [
    "dir/**/*.ts",
    "dir/**/*.d.ts",
    "dir/**/*.tsx"
  ]
}
